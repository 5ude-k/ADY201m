import matplotlib.pyplot as plt
import seaborn as sns

df['price_million'] = df['price'] / 1_000_000
district_order = df.groupby('district')['price_million'].mean().sort_values(ascending=False).index
plt.figure(figsize=(10,6))

sns.barplot(
    x='price_million', 
    y='district', 
    data=df, 
    palette='Set2', 
    order=district_order  
)

plt.title("Giá trung bình theo quận", fontsize=14, weight='bold')
plt.xlabel("Giá trung bình (triệu đồng)")
plt.ylabel("Quận")
plt.grid(alpha=0.3) 
plt.show()

top3 = df.groupby('district')['price_million'].mean().sort_values(ascending=False).head(3)
print("Top 3 quận có giá thuê trung bình cao nhất:")
print(top3)